<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".pending.PendingDialog">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.jim.moviecritics.pending.PendingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{() -> viewModel.leave()}">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            app:layout_constraintBottom_toTopOf="@+id/layout_pending_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text_pending_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#5100BCD4"
                android:text="@{viewModel.movie.title}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Movie Title" />

            <TextView
                android:id="@+id/text_pending_released"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="#322196F3"
                android:text="@{viewModel.movie.released.substring(0, 4)}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_pending_title"
                tools:text="Released Year" />

            <View
                android:id="@+id/divider1_pending"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_pending_released" />

            <ToggleButton
                android:id="@+id/toggle_pending_watch"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:drawableTop="@drawable/ic_watch_selector"
                android:includeFontPadding="false"
                android:textColor="@color/black_3f3a3a"
                android:textOff="Watch"
                android:textOn="Watched"
                android:checked="@{viewModel.isWatch}"
                android:onClick="@{() -> viewModel.onClickWatch(viewModel.movie.imdbID, viewModel.user.id)}"
                app:layout_constraintBottom_toBottomOf="@+id/toggle_pending_favorite"
                app:layout_constraintEnd_toStartOf="@+id/toggle_pending_favorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toggle_pending_favorite" />
<!--            android:checked="true"-->
<!--            android:clickable="false"-->

            <ToggleButton
                android:id="@+id/toggle_pending_favorite"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:drawableTop="@drawable/ic_favorite_selector"
                android:includeFontPadding="false"
                android:textColor="@color/black_3f3a3a"
                android:textOff="Like"
                android:textOn="Liked"
                android:checked="@{viewModel.isLike}"
                app:layout_constraintEnd_toStartOf="@+id/toggle_pending_watchlist"
                app:layout_constraintStart_toEndOf="@+id/toggle_pending_watch"
                app:layout_constraintTop_toBottomOf="@+id/divider1_pending" />

            <ToggleButton
                android:id="@+id/toggle_pending_watchlist"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:drawableTop="@drawable/ic_watchlist_selector"
                android:includeFontPadding="false"
                android:textColor="@color/black_3f3a3a"
                android:textOff="Watchlist"
                android:textOn="Added"
                android:checked="@{viewModel.isWatchList}"
                app:layout_constraintBottom_toBottomOf="@+id/toggle_pending_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toggle_pending_favorite"
                app:layout_constraintTop_toTopOf="@+id/toggle_pending_favorite" />

            <View
                android:id="@+id/divider2_pending"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toggle_pending_favorite" />

            <TextView
                android:id="@+id/text_pending_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2_pending" />

            <RatingBar
                android:id="@+id/ratingBar_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:stepSize="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_pending_rate" />

            <View
                android:id="@+id/divider3_pending"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar_pending" />

            <TextView
                android:id="@+id/text_pending_review"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3_pending" />

            <View
                android:id="@+id/divider4_pending"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_pending_review" />

            <TextView
                android:id="@+id/text_pending_share"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4_pending" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pending_bottom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#FFC107"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/divider5_pending"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_pending_bottom" />

            <TextView
                android:id="@+id/text_pending_done"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Done"
                android:onClick="@{() -> viewModel.leave()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>