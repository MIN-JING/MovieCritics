<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".trailer.TrailerDialog">

    <data>
        <variable
            name="viewModel"
            type="com.jim.moviecritics.trailer.TrailerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        android:onClick="@{() -> viewModel.leave()}"-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/text_trailer_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.movie.title}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Movie Title" />

            <VideoView
                android:id="@+id/video_trailer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="6:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_trailer_title" />


            <TextView
                android:id="@+id/text_trailer_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/video_trailer"
                tools:text="Progress" />

            <SeekBar
                android:id="@+id/seekBar_trailer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/text_trailer_progress"
                app:layout_constraintTop_toBottomOf="@+id/video_trailer"
                app:layout_constraintEnd_toStartOf="@+id/text_trailer_total_time"/>

            <TextView
                android:id="@+id/text_trailer_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBar_trailer"
                app:layout_constraintTop_toBottomOf="@+id/video_trailer"
                tools:text="Total Time" />

            <ImageButton
                android:id="@+id/button_trailer_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/button_trailer_play"
                android:src="@android:drawable/ic_media_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_trailer" />

            <ProgressBar
                android:id="@+id/progressBar_trailer"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/video_trailer"
                app:layout_constraintEnd_toEndOf="@+id/video_trailer"
                app:layout_constraintStart_toStartOf="@+id/video_trailer"
                app:layout_constraintTop_toTopOf="@+id/video_trailer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>